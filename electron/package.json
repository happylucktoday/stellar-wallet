{
  "name": "stellar-wallet-desktop-app",
  "description": "SatoshiPay wallet for the Stellar payment network.",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "SatoshiPay Ltd",
    "email": "feedback@satoshipay.io"
  },
  "homepage": "https://github.com/satoshipay/wallet",
  "scripts": {
    "prebuild:bundle": "cd .. && rm -rf ./electron/app && npm run build && cp -r ./dist ./electron/app",
    "prebuild:linux": "npm run prebuild:bundle",
    "prebuild:mac": "npm run prebuild:bundle",
    "prebuild:win": "npm run prebuild:bundle",
    "build:linux": "build --linux --x64",
    "build:mac": "build --mac --x64",
    "build:win": "build --win --x64",
    "dev": "concurrently 'npm run dev:server' 'sleep 1 && npm run dev:app'",
    "dev:app": "NODE_ENV=development electron .",
    "dev:server": "cd .. && npm run dev"
  },
  "build": {
    "appId": "io.satoshipay.wallet",
    "productName": "SatoshiPay Wallet"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "electron": "^2.0.4",
    "electron-builder": "^20.19.1"
  },
  "dependencies": {
    "electron-debug": "^2.0.0"
  }
}
