{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*",
    "./node_modules/@types/**/*"
  ],
  "rules": {
    "no-submodule-imports": false
  }
}
