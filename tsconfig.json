{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "~*": ["./src/*"],
      "*": ["shared/types/*"]
    },
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
